                            </td>
                            <td>@(decimal.Parse(item.Product_Sale_price.ToString()) * int.Parse(item.quantity.ToString()))</td>

                        </tr>
                        row++;
                        totalqty += item.quantity;
                        totalbill += Convert.ToDecimal(item.quantity) * Convert.ToDecimal(item.Product_Sale_price);
                    }



                </tbody>
                <tfooter>
                    <tr>
