        var data;
        $(document).ready(function () {

                // Select highlighted row

            var table = $('#mytable').DataTable({

                keys: {
                    keys: [13 /* ENTER */, 38 /* UP */, 40 /* DOWN */, 37 /* left */]
                }

            }


            );
            $('#myInputTextField').keyup(function () {
                table.search($(this).val()).draw();
})

            $('#mytable_filter').hide();



            //$('.input-sm').onkeydown = function(e) {
