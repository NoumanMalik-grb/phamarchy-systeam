                        <th>item name</th>
                        <th>Price</th>
                        <th>QTY</th>
                        <th>Total</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in (List<Product>)Session["product"])
                    {
                        <tr>
                            <td>@item.Product_name</td>
                            <td>@item.Product_Sale_price</td>
                            <td>
